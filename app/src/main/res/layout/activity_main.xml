<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="와이파이 켜기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wifiOn_btn"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="36dp" android:layout_marginStart="60dp"/>
    <Button
            android:text="와이파이 끄기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wifiOff_btn"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/wifiOn_btn"
            app:layout_constraintEnd_toEndOf="@+id/wifiOn_btn"/>
    <Button
            android:text="와이파이 상태"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wifiState_btn"
            app:layout_constraintStart_toStartOf="@+id/wifiOff_btn" android:layout_marginTop="37dp"
            app:layout_constraintTop_toBottomOf="@+id/wifiOff_btn"/>
    <Button
            android:text="와이파이스캔"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wifiScan_btn"
            app:layout_constraintStart_toStartOf="@+id/wifiState_btn" android:layout_marginTop="40dp"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toBottomOf="@+id/wifiState_btn"/>
    <Button
            android:text="와이파이접속"
            android:id="@+id/wifiConnet_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/wifiScan_btn" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/wifiScan_btn"/>
    <Button
            android:text="와이파이끊기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wifiDisconnect_btn"
            app:layout_constraintStart_toStartOf="@+id/wifiConnet_btn" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/wifiConnet_btn"/>
    <Button
            android:text="비행기모드 확인"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/airplaneDetect_btn"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="36dp" android:layout_marginEnd="72dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/wifiOn_btn"
            android:layout_marginStart="32dp"/>
    <Button
            android:text="데이터사용량 측정"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wifiMeasure_btn"
            app:layout_constraintStart_toStartOf="@+id/airplaneDetect_btn" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/airplaneDetect_btn"/>
    <Button
            android:text="연결된 와이파이정보"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/connected_info_btn"
            app:layout_constraintTop_toBottomOf="@+id/wifiMeasure_btn" android:layout_marginTop="28dp"
            app:layout_constraintStart_toStartOf="@+id/wifiMeasure_btn"/>

</android.support.constraint.ConstraintLayout>